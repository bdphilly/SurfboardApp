<div class="modal fade" id="user-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Booking</h4>
      </div>
      <div class="modal-body">
        Current Status: <%= rental.status %><br>
        Start Date: <%= rental.start %><br>
        End Date: <%= rental.end %><br>
        Price: <%= rental.price %>
        <br>
        <br>

          <!--need to submit this to board_rental model! -->

          <div class="radio">
            <label>
              <input type="radio" name="modal[status]" id="user-reservation-accept" value="approved">
              Accept this reservation
            </label>
          </div>
          <div class="radio">
            <label>
              <input type="radio" name="modal[status]" id="user-reservation-deny" value="denied">
              Deny this reservation
            </label>
          </div>

          <!--     -->

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>